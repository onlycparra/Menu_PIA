<Alloy>
	<Window class="container">
		
		<View id="header_view">
			<View id="home_view">
				<ImageView id="home_icon"/>
			</View>
			<View id="title_view">
				<Label id="title_label"/>
			</View>
			<View id="sound_view">
				<ImageView id="sound_icon"/>
			</View>
		</View>
		<View id="main_body">
			<View id="view_body">
				<Button id="Button_HS" onClick="menu_HS">Habilidades Sociales</Button>
				<Button id="Button_TF" onClick="menu_TF">Tolerancia a la Frustración</Button>
			</View>
			
			<View id="footer_view">
				<View id="done_view" visible="false">
					<Button id="done_button" onClick="done">LISTO</Button>
				</View>
				<View id="setting_view">
					<ImageView id="setting_icon" onClick="menu_setting"/>
				</View>
			</View>
		</View>
		
		<AlertDialog id="dialog" titleid="del" message="Ingrese la Contraseña" messageid="msg" cancel="1">
            <View>
                <TextField id="pass_input" passwordMask="true"></TextField>
            </View>
            <ButtonNames>
                <ButtonName>Ok</ButtonName>
            </ButtonNames>
        </AlertDialog>
        
    </Window>
</Alloy>